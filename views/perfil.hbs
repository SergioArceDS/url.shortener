<h1 class="text-center mb-3">{{user.userName}}</h1>
<p class="text-center">Edita aqui tu perfil</p>
<div class="mb-5 text-center">
    {{#if imagen}}
        <img src="/img/perfiles/{{imagen}}" alt="" class="rounded-circle">
        {{else}}
        <img src="/img/perfiles/perfil.jpg" alt="" class="rounded-circle">
    {{/if}}
</div>

<form action="/perfil?_csrf={{csrfToken}}" method="POST" enctype="multipart/form-data"> {{!-- Para las imagenes se debe mandar el Token como query --}}
 <input type="file" class="form-control form-control-sm" id="formFileSm" name="myFile">
 <button class="btn btn-dark my-3">Cambiar imagen de perfil</button>
</form>